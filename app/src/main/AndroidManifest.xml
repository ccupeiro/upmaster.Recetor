<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.upvmaster.carlos.recetor">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <!--<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />-->
    <uses-permission android:name="android.permission.INTERNET"/>

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/NoTitletheme">
        <activity android:name=".activities.Main_Activity"
            android:screenOrientation="portrait"
            android:configChanges="orientation">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.ListReceipt_Activity"
            android:label="@string/title_activity_list_receipt"
            android:screenOrientation="portrait"
            android:configChanges="orientation"/>
        <activity android:name=".activities.ViewReceipt_Activity"
            android:screenOrientation="portrait"
            android:configChanges="orientation"/>
        <activity android:name=".activities.AddReceipt_Activity"
            android:screenOrientation="portrait"
            android:configChanges="orientation"/>
        <activity android:name=".activities.Search_Activity" />
        <activity android:name=".activities.Dieta_Activity"
            android:screenOrientation="portrait"
            android:configChanges="orientation"/>
        <activity android:name=".activities.Preferencias_Activity"
            android:screenOrientation="portrait"
            android:configChanges="orientation"/>
    </application>

</manifest>