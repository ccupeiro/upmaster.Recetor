<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NoTitletheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="ItemToolbar">
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/small_margin</item>
        <item name="android:layout_marginStart">@dimen/small_margin</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:paddingStart">@dimen/small_margin</item>
        <item name="android:paddingEnd">@dimen/small_margin</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:background">@drawable/mibutton</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/button_text_color</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="alert_dialog_gota" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Buttons -->
        <item name="colorAccent">@color/colorAccent</item>
        <!-- Title and text -->
        <item name="android:textColorPrimary">@color/greyDark</item>
        <item name="android:background">#FFFFFF</item>
    </style>
</resources>
