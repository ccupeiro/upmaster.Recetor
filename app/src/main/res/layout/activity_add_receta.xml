<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="2">
        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/logo"
            android:layout_weight="2"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">
            <android.support.design.widget.TextInputLayout
                android:id="@+id/til_name_receipt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp"
                android:layout_weight="1">

                <EditText
                    android:id="@+id/et_name_receipt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nombre Receta"
                    android:imeOptions="actionNext"
                    android:inputType="none"
                    android:layout_weight="1" />

            </android.support.design.widget.TextInputLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Grupo:"
                    android:layout_weight="2"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/tv_grupo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="GRUPO AL QUE PERTENECE"
                    android:layout_weight="1"
                    android:gravity="center_vertical|left"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="INGREDIENTES"
                android:layout_margin="@dimen/activity_vertical_margin"/>
            <TableLayout
                android:id="@+id/tbl_ingredientes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TableLayout>
            <LinearLayout
                android:id="@+id/ll_add_ingrediente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="left">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_plus"/>
                <TextView
                    android:id="@+id/tv_add_ingrediente"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Añadir Ingrediente.."/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/black"
                android:layout_marginTop="@dimen/activity_vertical_margin"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PASOS"
                android:layout_margin="@dimen/activity_vertical_margin"/>
            <TableLayout
                android:id="@+id/tbl_pasos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TableLayout>
            <LinearLayout
                android:id="@+id/ll_add_paso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="left">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_plus"/>
                <TextView
                    android:id="@+id/tv_add_paso"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Añadir Paso.."/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/black"
                android:layout_marginTop="@dimen/activity_vertical_margin"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="VARIANTES"
                android:layout_margin="@dimen/activity_vertical_margin"/>
            <TableLayout
                android:id="@+id/tbl_variantes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TableLayout>
            <LinearLayout
                android:id="@+id/ll_add_variante"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="left">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_plus"/>
                <TextView
                    android:id="@+id/tv_no_ingrendientes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Añadir Ingrediente.."/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>