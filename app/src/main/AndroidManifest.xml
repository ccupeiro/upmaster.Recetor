<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.upvmaster.carlos.recetor">
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-feature android:name="android.hardware.camera"
        android:required="true" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/NoTitletheme"
        android:configChanges="orientation"
        android:screenOrientation="portrait">
        <activity android:name=".activities.Main_Activity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.ListReceipt_Activity"
            android:label="@string/title_activity_list_receipt" />
        <activity android:name=".activities.ViewReceipt_Activity"/>
        <activity android:name=".activities.AddReceipt_Activity"/>
        <activity android:name=".activities.Search_Activity"/>
    </application>

</manifest>